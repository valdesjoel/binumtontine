<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/signup_text_margin_top">
<!--            android:padding="@dimen/activity_horizontal_margin">-->

            <TextView
                android:id="@+id/textViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textAppearance="?android:textAppearanceLarge" />
            <TextView
                android:id="@+id/textViewNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Heading"
                android:textSize="15sp"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/textViewNationalite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewNom"
                android:textColor="@color/colorAccent1"
                android:textSize="12sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi molestie nisi dui. "
                android:textAppearance="?android:textAppearanceMedium" />
<!--<Button-->
<!--    android:visibility="gone"-->
<!--    android:layout_width="wrap_content"-->
<!--    android:layout_height="wrap_content"-->
<!--    android:layout_below="@id/textViewNationalite"-->
<!--    android:text="click"-->
<!--    android:id="@+id/btnClick"-->
<!--    />-->

            <TextView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/signup_text_margin_top"
                android:layout_marginRight="20dp"
                android:width="20dp"
                android:paddingLeft="@dimen/signup_text_margin_top"
                android:text="&#8942;"
                android:textColor="@color/colorAccent1"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20sp" />
<!--            android:textSize="10sp"-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>