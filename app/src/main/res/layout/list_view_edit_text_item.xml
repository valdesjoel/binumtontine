<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <!-- Hidden TextView used to hold fraisId -->
        <TextView
            android:id="@+id/fraisId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />
        <TextView
            android:id="@+id/fraisFonction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fraisLibelle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:maxLines="4"
            android:text="TextView:"
            android:textSize="18sp"
            android:textColor="#000" />

        <EditText
            android:id="@+id/nombrePS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:inputType="numberSigned"
            android:hint="Nombre PS"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:visibility="gone" />
        <EditText
            android:id="@+id/fraisMontant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:inputType="numberSigned"
            android:hint="montant frais"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000" />

    </LinearLayout>

<!--
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:background="@color/colorAccent"/>
    -->

</LinearLayout>