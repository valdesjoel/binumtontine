<!--        EvNatureFraisClot /Enum('F','T','P')   * pour les cas de Fixe ou valeur/F, de taux/T,
donc ayant une base, ou de Plage, avec code "FCV" pour "Frais de Clôture EAV" dans le cas de Plage.-->
        <!-- radiogroup -->
        <LinearLayout
            android:id="@+id/ll_EvNatureFraisClot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblEvNatureFraisClot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Type de frais de Clôture de compte"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblEvNatureFraisClot"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end"
                android:layout_marginTop="10dp"
                android:id="@+id/radioGroupEvNatureFraisClot" >

                <RadioButton
                    android:id="@+id/rbEvNatureFraisClotFixe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fixe"
                    android:onClick="onRadioButtonClicked"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/rbEvNatureFraisClotTaux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taux"
                    android:onClick="onRadioButtonClicked"
                    android:checked="false" />

                <RadioButton
                    android:id="@+id/rbEvNatureFraisClotPlage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plage"
                    android:onClick="onRadioButtonClicked"
                    android:checked="false" />

            </RadioGroup>
        </LinearLayout>

        <!-- EvValFraisCloture/R. **  pour renseigner sa valeur si fixe ou la valeur du taux au besoin. -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_EvValFraisCloture"
            style="@style/parent"
            android:visibility="gone"
            android:layout_marginTop="@dimen/loginViewsMargin">
            <EditText
                android:id="@+id/input_txt_EvValFraisCloture"
                style="@style/modifiedEditText"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="18dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EvBaseFraisCloture /A3 *  Pour renseigner sa base du taux -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_EvBaseFraisCloture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayoutStyle"
            style="@style/parent"
